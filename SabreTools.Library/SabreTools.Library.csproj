    <None Remove="Skippers\nes.xml" />
    <None Remove="Skippers\pce.xml" />
    <None Remove="Skippers\psid.xml" />
    <None Remove="Skippers\snes.xml" />
    <None Remove="Skippers\spc.xml" />
